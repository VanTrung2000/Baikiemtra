@model BaiKiemTra.ViewModel.HomeIndex

<form method="post" asp-action="Create">
    <div class="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info">Add Post</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Posts.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Posts.Title" class="form-control" />
                        <span asp-validation-for="Posts.Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Posts.Content"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Posts.Content" class="form-control"></textarea>
                        <span asp-validation-for="Posts.Content" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Posts.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Posts.CategoryId" asp-items="@Model.CategoriesSelectList" class="form-control"></select>
                        <span asp-validation-for="Posts.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Posts.TagId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Posts.TagId" asp-items="@Model.TagsSelectList" class="form-control"></select>
                        <span asp-validation-for="Posts.TagId" class="text-danger"></span>
                    </div>
                </div>
                   
                <div class="row form-group">
                    <div class="col">
                        <input type="submit" value="Submit" class="btn btn-info" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>
            </div>
        </div>
        </div>
</form>
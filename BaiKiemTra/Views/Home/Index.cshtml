@model IEnumerable<Posts>

<div>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Content
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">
                            @item.Id
                        </td>
                        <td width="40%">
                            @item.Title
                        </td>
                        <td width="10%">
                            @item.Content
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    


</div>